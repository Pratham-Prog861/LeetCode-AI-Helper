{
  "manifest_version": 3,
  "name": "LeetCode AI Helper",
  "description": "Get Hints, Approach, and Code for LeetCode problems using Gemini AI",
  "version": "1.2",
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "host_permissions": ["https://leetcode.com/*"],
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
} 